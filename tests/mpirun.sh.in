#!/bin/sh

set -e

[ -z "${OAR_NODE_FILE}" ] && { echo "Error: OAR_NODE_FILE not defined. You should run the test inside an OAR job" ; exit 1 ; }

COMMAND="$@"

MPIRUN_COMMAND="mpirun -machinefile ${OAR_NODE_FILE} -np 2 ${COMMAND}"
echo "PWD: ${PWD}"
echo "Running: ${MPIRUN_COMMAND}"
echo "Machine file:"
cat "${OAR_NODE_FILE}"
echo
${MPIRUN_COMMAND}

